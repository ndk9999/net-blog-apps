@model ContactFormModel

<form asp-controller="Home"
      asp-action="Contact"
      class="bg-light p-5 contact-form needs-validation"
	  method="post"
      novalidate>
	
	<div asp-validation-summary="All"></div>

	<div class="form-group">
		<input type="text"
		       class="form-control"
		       placeholder="Your Name"
		       asp-for="FullName">
		<span asp-validation-for="FullName" class="invalid-feedback"></span>
	</div>
	<div class="form-group">
		<input type="text"
			   class="form-control"
			   placeholder="Your Email"
			   asp-for="Email">
		<span asp-validation-for="Email" class="invalid-feedback"></span>
	</div>
	<div class="form-group">
		<input type="text"
			   class="form-control"
			   placeholder="Subject"
			   asp-for="Subject">
		<span asp-validation-for="Subject" class="invalid-feedback"></span>
	</div>
	<div class="form-group">
		<textarea asp-for="Message"
				  cols="30"
				  rows="7"
				  class="form-control"
				  placeholder="Message">
		</textarea>
		<span asp-validation-for="Message" class="invalid-feedback"></span>
	</div>
	<div class="form-group">
		<button type="submit"
		        class="btn btn-primary py-3 px-5">
			Send Message
		</button>
	</div>
</form>