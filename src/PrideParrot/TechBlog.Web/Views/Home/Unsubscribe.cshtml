@model UnsubscribeModel

@{
	ViewData["PageTitle"] = "Unsubscribe";
	Layout = "_FreeLayout";
}

<section class="ftco-section contact-section px-md-4">
	<div class="container">
		<div class="row d-flex mb-5 contact-info">
			<div class="col-md-12 mb-4">
				<h2 class="h3">
					Unsubscribe For Newsletter
				</h2>
			</div>
		</div>
			
		<div class="row block-9">
			<div class="col-lg-6">
				@if (string.IsNullOrWhiteSpace(Model.Message))
				{
					<form asp-controller="Home"
					      asp-action="Unsubscribe"
					      class="bg-light p-5 contact-form"
					      method="post"
					      novalidate>

						<div asp-validation-summary="All" class="text-danger"></div>

						<div class="form-group">
							<label asp-for="Email"></label>
							<input type="text"
							       class="form-control"
							       asp-for="Email"
							       readonly="readonly">
							<span asp-validation-for="Email" class="invalid-feedback"></span>
						</div>

						<div class="form-group">
							<label asp-for="Reason"></label>
							<input type="text"
							       class="form-control"
							       placeholder="Reason"
							       asp-for="Reason">
							<span asp-validation-for="Reason" class="invalid-feedback"></span>
						</div>

						<div class="form-group">
							<button type="submit" id="btnUnsubscribe"
							        class="btn btn-primary py-3 px-5">
								Submit Request
							</button>
						</div>
					</form>
				}
				else
				{
					<div class="alert alert-danger" role="alert">
						@Model.Message
					</div>
				}
			</div>
		</div>
	</div>
</section>
