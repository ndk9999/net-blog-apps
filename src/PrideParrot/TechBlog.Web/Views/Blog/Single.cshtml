@model Post

<div class="pt-md-4">
	<h1 class="mb-3">
		@Model.Title
	</h1>
	
	<div class="meta-wrap">
		<p class="meta">
			<span>
				<i class="icon-calendar mr-2"></i> 
				@Model.PostedDate.ToString("g")
			</span>
			<span class="ml-3">
				Category:

				<a asp-controller="Blog"
				   asp-action="Category"
				   asp-route-slug="@Model.Category.UrlSlug"
				   title="@Model.Category.Name">
					@Model.Category.Name
				</a>
			</span>
			<div class="tagcloud">
				Tags:

				<partial name="_TagList" model="Model.Tags"/>
			</div>
		</p>
	</div>

	<p>
		@Html.Raw(Model.ShortDescription)
	</p>
	
	<p>
		<img src="/images/image_1.jpg" alt="" class="img-fluid">
	</p>
	
	<p>
		@Html.Raw(Model.Description)
	</p>

	<div class="tag-widget post-tag-container mb-5 mt-5">
		<div class="tagcloud">
			<partial name="_TagList" model="Model.Tags" />
		</div>
	</div>
	
	<div class="about-author d-flex p-4 bg-light">
		<div class="bio mr-5">
			<img src="/images/person_1.jpg" alt="Image placeholder" class="img-fluid mb-4">
		</div>
		<div class="desc">
			<h3>
				Author Name
			</h3>
			<p>
				Lorem ipsum dolor sit amet, consectetur adipisicing elit. 
				Ducimus itaque, autem necessitatibus voluptate quod mollitia 
				delectus aut, sunt placeat nam vero culpa sapiente 
				consectetur similique, inventore eos fugit cupiditate numquam!
			</p>
		</div>
	</div>
</div>